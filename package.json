{
  "name": "dora-front",
  "version": "0.0.1",
  "engines": {
    "npm": ">= 8",
    "node": ">= 16"
  },
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "start": "node build",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --write --plugin-search-dir=. . && eslint --ignore-path .gitignore --fix . && svgo --pretty -f src/lib/assets",
    "prepare": "husky install",
    "security-scan": "ggshield scan  path -r . -y",
    "sb": "start-storybook -p 6006",
    "sb-build": "build-storybook"
  },
  "@comment dependencies": {
    "dependencies-vs-devdependencies": "Les librairies qui sont dans dependencies sont utilis√©es depuis node_modules par le bundle ssr (voir: https://vitejs.dev/guide/ssr.html#ssr-externals). Pour tester: `npm i && npm run build && rm -rf node_modules/ && npm i --production && node build`."
  },
  "dependencies": {
    "@sentry/browser": "^6.17.7",
    "@sentry/tracing": "^6.17.7",
    "@tiptap/core": "^2.0.0-beta.174",
    "@tiptap/extension-placeholder": "^2.0.0-beta.48",
    "@tiptap/starter-kit": "^2.0.0-beta.183",
    "husky": "^7.0.4",
    "insane": "^2.6.2",
    "showdown": "^2.0.0-alpha"
  },
  "devDependencies": {
    "@babel/core": "^7.17.2",
    "@storybook/addon-docs": "^6.5.0-alpha.39",
    "@storybook/addon-essentials": "^6.5.0-alpha.39",
    "@storybook/addon-links": "^6.5.0-alpha.39",
    "@storybook/addon-svelte-csf": "^1.1.0",
    "@storybook/svelte": "^6.5.0-alpha.39",
    "@sveltejs/adapter-node": "next",
    "@sveltejs/kit": "next",
    "@tailwindcss/typography": "^0.5.1",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "cssnano": "^5.0.17",
    "eslint": "^8.9.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^37.9.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-svelte3": "^3.4.0",
    "lint-staged": "^12.3.4",
    "postcss": "^8.4.6",
    "postcss-load-config": "^3.1.3",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.7",
    "remixicon": "^2.5.0",
    "storybook-builder-vite": "^0.1.15",
    "svelte": "^3.46.4",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.10.3",
    "svgo": "^2.8.0",
    "tailwindcss": "^3.0.22"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,svelte}": [
      "prettier --write --plugin-search-dir=.",
      "eslint --ignore-path .gitignore --fix"
    ],
    "*.{json,css,postcss,html,md}": [
      "prettier --write --plugin-search-dir=."
    ],
    "*": [
      "ggshield scan pre-commit"
    ]
  }
}
