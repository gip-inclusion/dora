{
  "name": "dora-front",
  "version": "0.0.5",
  "engines": {
    "npm": ">= 8",
    "node": ">= 16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/betagouv/dora-front"
  },
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "start": "node build",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --write --plugin-search-dir=. . && eslint --ignore-path .gitignore --fix . && svgo --pretty -f src/lib/assets",
    "prepare": "husky install",
    "security-scan": "ggshield scan  path -r . -y",
    "commit": "cz",
    "release": "git pull --rebase --tags origin main && standard-version && git push --follow-tags origin main && conventional-github-releaser",
    "sb": "start-storybook -p 6006",
    "sb-build": "build-storybook -o design-system"
  },
  "@comment dependencies": {
    "dependencies-vs-devdependencies": "Les librairies qui sont dans dependencies sont utilis√©es depuis node_modules par le bundle ssr (voir: https://vitejs.dev/guide/ssr.html#ssr-externals). Pour tester: `npm i && npm run build && rm -rf node_modules/ && npm i --production && node build`."
  },
  "dependencies": {
    "@sentry/browser": "^6.18.2",
    "@sentry/tracing": "^6.18.2",
    "@tiptap/core": "^2.0.0-beta.174",
    "@tiptap/extension-link": "^2.0.0-beta.36",
    "@tiptap/extension-placeholder": "^2.0.0-beta.48",
    "@tiptap/starter-kit": "^2.0.0-beta.183",
    "husky": "^7.0.4",
    "insane": "^2.6.2",
    "showdown": "^2.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@storybook/addon-docs": "6.5.0-alpha.46",
    "@storybook/addon-essentials": "6.5.0-alpha.46",
    "@storybook/addon-links": "6.5.0-alpha.46",
    "@storybook/addon-svelte-csf": "^1.1.0",
    "@storybook/svelte": "6.5.0-alpha.46",
    "@sveltejs/adapter-node": "next",
    "@sveltejs/kit": "next",
    "@tailwindcss/typography": "^0.5.2",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "commitizen": "^4.2.4",
    "conventional-github-releaser": "^3.1.5",
    "cssnano": "^5.1.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsdoc": "^38.0.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "lint-staged": "^12.3.5",
    "postcss": "^8.4.8",
    "postcss-load-config": "^3.1.3",
    "postcss-url": "^10.1.3",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "remixicon": "^2.5.0",
    "semantic-release": "^19.0.2",
    "standard-version": "^9.3.2",
    "storybook-builder-vite": "^0.1.18",
    "svelte": "^3.46.4",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.10.4",
    "svgo": "^2.8.0",
    "tailwindcss": "^3.0.23"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,svelte}": [
      "prettier --write --plugin-search-dir=.",
      "eslint --ignore-path .gitignore --fix"
    ],
    "*.{json,css,postcss,html,md}": [
      "prettier --write --plugin-search-dir=."
    ],
    "*": [
      "ggshield scan pre-commit"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
