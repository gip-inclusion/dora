{
  "name": "dora-front",
  "version": "0.0.16",
  "engines": {
    "npm": ">=8 <9",
    "node": ">=16 <18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/betagouv/dora-front"
  },
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "start": "node build",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --write --plugin-search-dir=. . && eslint --ignore-path .gitignore --fix . && svgo --pretty -f src/lib/assets",
    "prepare": "husky install",
    "security-scan": "ggshield scan  path -r . -y",
    "commit": "cz",
    "release": "git pull --rebase --tags origin main && standard-version && git push --follow-tags origin main",
    "sb": "start-storybook -p 6006",
    "sb-build": "build-storybook -o design-system"
  },
  "@comment dependencies": {
    "dependencies-vs-devdependencies": "Les librairies qui sont dans dependencies sont utilisÃ©es depuis node_modules par le bundle ssr (voir: https://vitejs.dev/guide/ssr.html#ssr-externals). Pour tester: `npm i && npm run build && rm -rf node_modules/ && npm i --production && node build`."
  },
  "dependencies": {
    "@sentry/browser": "^7.3.1",
    "@sentry/tracing": "^7.3.1",
    "@tiptap/core": "^2.0.0-beta.181",
    "@tiptap/extension-link": "^2.0.0-beta.43",
    "@tiptap/extension-placeholder": "^2.0.0-beta.53",
    "@tiptap/starter-kit": "^2.0.0-beta.190",
    "husky": "^8.0.1",
    "iframe-resizer": "^4.3.2",
    "insane": "^2.6.2",
    "showdown": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@storybook/addon-docs": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/builder-vite": "^0.1.38",
    "@storybook/svelte": "^6.5.9",
    "@sveltejs/adapter-node": "next",
    "@sveltejs/kit": "next",
    "@tailwindcss/typography": "^0.5.2",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.5",
    "commitizen": "^4.2.4",
    "cssnano": "^5.1.12",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.18.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "postcss-load-config": "^4.0.1",
    "postcss-url": "^10.1.3",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "remixicon": "^2.5.0",
    "semantic-release": "^19.0.3",
    "standard-version": "^9.5.0",
    "svelte": "^3.48.0",
    "svelte-loader": "^3.1.3",
    "svelte-preprocess": "^4.10.7",
    "svgo": "^2.8.0",
    "tailwindcss": "^3.1.4"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,svelte}": [
      "prettier --write --plugin-search-dir=.",
      "eslint --ignore-path .gitignore --fix"
    ],
    "*.{json,css,postcss,html,md}": [
      "prettier --write --plugin-search-dir=."
    ],
    "*": [
      "ggshield scan pre-commit"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
