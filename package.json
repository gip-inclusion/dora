{
  "name": "dora-front",
  "version": "0.0.20",
  "engines": {
    "npm": ">=8 <9",
    "node": ">=16 <18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/betagouv/dora-front"
  },
  "scripts": {
    "dev": "vite dev --port 3000 --strictPort",
    "build": "vite build",
    "build:test": "vite build --mode test",
    "start": "node build",
    "preview": "vite preview --port 3000 --strictPort",
    "test-e2e": "playwright test e2e",
    "test-e2e-debug": "playwright test --debug e2e",
    "test-unit": "vitest run --dir ./tests",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint .",
    "format": "prettier --write --plugin-search-dir=. . && eslint --fix . && svgo --pretty -f src/lib/assets",
    "svg-optimize": "svgo --pretty -f src/lib/assets",
    "prepare": "husky install",
    "security-scan": "ggshield scan  path -r . -y"
  },
  "@comment dependencies": {
    "dependencies-vs-devdependencies": "Les librairies qui sont dans dependencies sont utilisÃ©es depuis node_modules par le bundle ssr (voir: https://vitejs.dev/guide/ssr.html#ssr-externals). Pour tester: `npm i && npm run build && rm -rf node_modules/ && npm i --production && node build`."
  },
  "dependencies": {
    "@sentry/browser": "^7.3.1",
    "@sentry/tracing": "^7.3.1",
    "@tiptap/core": "^2.0.0-beta.181",
    "@tiptap/extension-link": "^2.0.0-beta.43",
    "@tiptap/extension-placeholder": "^2.0.0-beta.53",
    "@tiptap/starter-kit": "^2.0.0-beta.190",
    "dayjs": "^1.11.4",
    "husky": "^8.0.1",
    "iframe-resizer": "^4.3.2",
    "insane": "^2.6.2",
    "lodash.debounce": "^4.0.8",
    "showdown": "^2.1.0",
    "uid": "^2.0.0",
    "vite": "^3.0.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.22.2",
    "@sveltejs/adapter-node": "next",
    "@sveltejs/kit": "next",
    "@tailwindcss/typography": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.14",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "remixicon": "^2.5.0",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.0",
    "svelte-portal": "^2.2.0",
    "svelte-preprocess": "^4.10.7",
    "svgo": "^2.8.0",
    "tailwindcss": "^3.1.4",
    "tslib": "^2.3.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.0",
    "vitest": "^0.20.3"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "prettier --write --plugin-search-dir=.",
      "eslint --fix"
    ],
    "*.{json,css,postcss,html,md}": [
      "prettier --write --plugin-search-dir=."
    ],
    "*": [
      "ggshield scan pre-commit"
    ]
  }
}
