{
  "name": "dora-front",
  "version": "0.0.20",
  "engines": {
    "npm": "8",
    "node": "16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/betagouv/dora-front"
  },
  "scripts": {
    "dev": "vite dev --port 3000 --strictPort",
    "build": "vite build",
    "build:test": "vite build --mode test",
    "start": "node build",
    "preview": "vite preview --port 3000 --strictPort",
    "test-e2e": "playwright test e2e",
    "test-e2e-debug": "playwright test --debug e2e",
    "test-unit": "vitest run --dir ./tests",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint .",
    "format": "prettier --write --plugin-search-dir=. . && eslint --fix . && svgo --pretty -f src/lib/assets",
    "svg-optimize": "svgo --pretty -f src/lib/assets",
    "prepare": "husky install",
    "security-scan": "ggshield secret scan  path -r . -y"
  },
  "@comment dependencies": {
    "dependencies-vs-devdependencies": "Les librairies qui sont dans dependencies sont utilis√©es depuis node_modules par le bundle ssr (voir: https://vitejs.dev/guide/ssr.html#ssr-externals). Pour tester: `npm i && npm run build && rm -rf node_modules/ && npm i --production && node build`."
  },
  "dependencies": {
    "@sentry/browser": "^7.19.0",
    "@sentry/tracing": "^7.19.0",
    "@tiptap/core": "^2.0.0-beta.202",
    "@tiptap/extension-link": "^2.0.0-beta.202",
    "@tiptap/extension-placeholder": "^2.0.0-beta.202",
    "@tiptap/starter-kit": "^2.0.0-beta.202",
    "dayjs": "^1.11.6",
    "husky": "^8.0.2",
    "iframe-resizer": "^4.3.2",
    "insane": "^2.6.2",
    "lodash.debounce": "^4.0.8",
    "showdown": "^2.1.0",
    "uid": "^2.0.1",
    "vite": "^3.0.4",
    "wicg-inert": "^3.1.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.27.1",
    "@sveltejs/adapter-node": "1.0.0-next.85",
    "@sveltejs/kit": "1.0.0-next.402",
    "@tailwindcss/typography": "^0.5.8",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.18",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "remixicon": "^2.5.0",
    "svelte": "^3.53.1",
    "svelte-check": "^2.9.2",
    "svelte-portal": "^2.2.0",
    "svelte-preprocess": "^4.10.7",
    "svgo": "^3.0.0",
    "tailwindcss": "^3.2.3",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4",
    "vite": "^3.2.3",
    "vitest": "^0.25.1"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "prettier --write --plugin-search-dir=.",
      "eslint --fix"
    ],
    "*.{json,css,postcss,html,md}": [
      "prettier --write --plugin-search-dir=."
    ],
    "*": [
      "ggshield scan pre-commit"
    ]
  }
}
