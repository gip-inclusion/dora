{
  "name": "dora-front",
  "version": "0.0.20",
  "engines": {
    "npm": ">=8",
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/betagouv/dora-front"
  },
  "scripts": {
    "dev": "vite dev --port 3000 --strictPort",
    "build": "vite build",
    "start": "node build",
    "preview": "vite preview --port 3000 --strictPort",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --output human-verbose --threshold error",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write . && eslint --fix . && svgo --pretty -f src/lib/assets",
    "svg-optimize": "svgo --pretty -r -f ./src/lib/assets",
    "prepare": "husky install",
    "security-scan": "ggshield secret scan path -r . -y"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "5.0.1",
    "@sveltejs/kit": "2.5.3",
    "@sveltejs/vite-plugin-svelte": "3.0.2",
    "@tailwindcss/typography": "0.5.10",
    "@tiptap/core": "2.2.4",
    "@tiptap/extension-link": "2.2.4",
    "@tiptap/extension-placeholder": "2.2.4",
    "@tiptap/starter-kit": "2.2.4",
    "@types/iframe-resizer": "3.5.13",
    "@types/showdown": "2.0.6",
    "@typescript-eslint/eslint-plugin": "7.2.0",
    "@typescript-eslint/parser": "7.2.0",
    "autoprefixer": "10.4.18",
    "dayjs": "1.11.10",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-svelte": "2.35.1",
    "hexoid": "1.0.0",
    "husky": "9.0.11",
    "iframe-resizer": "4.3.9",
    "insane": "2.6.2",
    "lint-staged": "15.2.2",
    "maplibre-gl": "4.1.0",
    "opening_hours": "3.8.0",
    "postcss": "8.4.35",
    "postcss-load-config": "5.0.3",
    "prettier": "3.2.5",
    "prettier-plugin-svelte": "3.2.2",
    "prettier-plugin-tailwindcss": "0.5.12",
    "remixicon": "4.2.0",
    "showdown": "2.1.0",
    "svelte": "4.2.12",
    "svelte-check": "3.6.7",
    "svelte-portal": "2.2.1",
    "svgo": "3.2.0",
    "tailwindcss": "3.4.1",
    "tslib": "2.6.2",
    "typescript": "5.4.2",
    "vite": "5.1.7",
    "vitest": "1.3.1",
    "wicg-inert": "3.1.2",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.0/xlsx-0.20.0.tgz"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,postcss,html,md}": [
      "prettier --write"
    ],
    "*": [
      "ggshield secret scan pre-commit"
    ]
  },
  "dependencies": {
    "@sentry/sveltekit": "7.106.1"
  }
}
