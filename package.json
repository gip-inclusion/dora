{
  "name": "dora-front",
  "version": "0.0.20",
  "engines": {
    "npm": "8",
    "node": "18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/betagouv/dora-front"
  },
  "scripts": {
    "dev": "vite dev --port 3000 --strictPort",
    "build": "vite build",
    "start": "node build",
    "preview": "vite preview --port 3000 --strictPort",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --output human-verbose --threshold error --use-new-transformation true",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write . && eslint --fix . && svgo --pretty -f src/lib/assets",
    "svg-optimize": "svgo --pretty -r -f ./src/lib/assets",
    "prepare": "husky install",
    "security-scan": "ggshield secret scan path -r . -y"
  },
  "devDependencies": {
    "@sentry/svelte": "^7.36.0",
    "@sentry/tracing": "^7.36.0",
    "@sveltejs/adapter-node": "^1.1.7",
    "@sveltejs/kit": "^1.5.2",
    "@tailwindcss/typography": "^0.5.9",
    "@tiptap/core": "^2.0.0-beta.205",
    "@tiptap/extension-link": "^2.0.0-beta.205",
    "@tiptap/extension-placeholder": "^2.0.0-beta.205",
    "@tiptap/starter-kit": "^2.0.0-beta.205",
    "@types/iframe-resizer": "^3.5.9",
    "@types/showdown": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "autoprefixer": "^10.4.13",
    "dayjs": "^1.11.6",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "husky": "^8.0.3",
    "iframe-resizer": "^4.3.3",
    "insane": "^2.6.2",
    "lint-staged": "^13.1.1",
    "postcss": "^8.4.21",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.8.4",
    "prettier-plugin-svelte": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "remixicon": "^2.5.0",
    "showdown": "^2.1.0",
    "svelte": "^3.55.1",
    "svelte-check": "^3.0.3",
    "svelte-portal": "^2.2.0",
    "svgo": "^3.0.2",
    "tailwindcss": "^3.2.6",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vitest": "^0.28.4",
    "wicg-inert": "^3.1.2"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,postcss,html,md}": [
      "prettier --write"
    ],
    "*": [
      "ggshield secret scan pre-commit"
    ]
  }
}
