services:
  db:
    image: postgis/postgis:16-3.4-alpine
    env_file:
      - envs/dev.env
      - envs/secrets.env
    volumes:
      - pgdata:/var/lib/postgresql/data
      - pgconf:/etc/postgresql
    ports:
      - "127.0.0.1:5432:5432"
  pgadmin:
    image: dpage/pgadmin4
    env_file:
      - envs/secrets.env
    volumes:
      - pgadmin-data:/var/lib/pgadmin
    ports:
      - "127.0.0.1:8888:80"
  s3:
    image: minio/minio:latest
    env_file:
      - envs/dev.env
      - envs/secrets.env
    volumes:
      - miniodata:/data
    ports:
      - "127.0.0.1:9000:9000"
      - "127.0.0.1:9001:9001"
    command: server /data --console-address ":9001"
  redis:
    image: redis:alpine
    ports:
      - "127.0.0.1:6379:6379"
volumes:
  pgdata:
  pgconf:
  miniodata:
  pgadmin-data:
