{
  "name": "dora-front",
  "version": "0.0.20",
  "engines": {
    "npm": ">=8",
    "node": ">=18.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/betagouv/dora-front"
  },
  "scripts": {
    "dev": "vite dev --port 3000 --strictPort",
    "build": "vite build",
    "start": "node build",
    "preview": "vite preview --port 3000 --strictPort",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --output human-verbose --threshold error",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write . && svgo --pretty --recursive --folder src/lib/assets",
    "format:check": "prettier --check .",
    "svg-optimize": "svgo --pretty -r -f ./src/lib/assets",
    "prepare": "husky install",
    "security-scan": "ggshield secret scan path -r . -y"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.15.0",
    "@iframe-resizer/parent": "^5.3.2",
    "@nazka/map-gl-js-spiderfy": "^1.2.5",
    "@sveltejs/adapter-node": "^5.2.9",
    "@sveltejs/kit": "2.8.0",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@tailwindcss/typography": "^0.5.15",
    "@tiptap/core": "^2.10.2",
    "@tiptap/extension-link": "^2.10.2",
    "@tiptap/extension-placeholder": "^2.10.2",
    "@tiptap/starter-kit": "^2.10.2",
    "@types/iframe-resizer": "^3.5.13",
    "@types/showdown": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "autoprefixer": "^10.4.20",
    "dayjs": "^1.11.13",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.1",
    "globals": "^15.12.0",
    "hexoid": "^2.0.0",
    "husky": "^9.1.7",
    "insane": "^2.6.2",
    "lint-staged": "^15.2.10",
    "maplibre-gl": "^4.7.1",
    "opening_hours": "^3.8.0",
    "postcss": "^8.4.49",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "remixicon": "^4.5.0",
    "showdown": "^2.1.0",
    "svelte": "^4.2.19",
    "svelte-check": "^4.1.0",
    "svelte-portal": "^2.2.1",
    "svgo": "^3.3.2",
    "tailwindcss": "^3.4.15",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.5",
    "wicg-inert": "^3.1.3",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,postcss,html,md}": [
      "prettier --write"
    ],
    "*": [
      "ggshield secret scan pre-commit"
    ]
  },
  "dependencies": {
    "@sentry/sveltekit": "^8.40.0"
  }
}
