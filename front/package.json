{
  "name": "dora-front",
  "version": "0.0.20",
  "engines": {
    "npm": ">=8",
    "node": ">=20.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/betagouv/dora-front"
  },
  "scripts": {
    "dev": "vite dev --port 3000 --strictPort",
    "build": "vite build",
    "start": "node build",
    "preview": "vite preview --port 3000 --strictPort",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --output human-verbose --threshold error",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write . && svgo --pretty --recursive --folder src/lib/assets",
    "format:check": "prettier --check .",
    "svg-optimize": "svgo --pretty -r -f ./src/lib/assets",
    "prepare": "husky install",
    "security-scan": "ggshield secret scan path -r . -y"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@iframe-resizer/parent": "^5.5.7",
    "@nazka/map-gl-js-spiderfy": "^1.2.10",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.47.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.14",
    "@tiptap/core": "^3.7.2",
    "@tiptap/extension-link": "^3.7.2",
    "@tiptap/extension-placeholder": "^3.7.2",
    "@tiptap/starter-kit": "^3.7.2",
    "@types/iframe-resizer": "^4.0.0",
    "@types/insane": "^1.0.0",
    "@types/showdown": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.39.0",
    "bits-ui": "^2.14.0",
    "dayjs": "^1.11.18",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.5",
    "globals": "^16.4.0",
    "hexoid": "^2.0.0",
    "husky": "^9.1.7",
    "insane": "^2.6.2",
    "lint-staged": "^16.2.4",
    "maplibre-gl": "^5.9.0",
    "opening_hours": "^3.9.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "remixicon": "^4.7.0",
    "showdown": "^2.1.0",
    "svelte": "^5.38.0",
    "svelte-check": "^4.3.3",
    "svelte-portal": "^2.2.1",
    "svelte-remix": "^3.0.0",
    "sveltekit-rate-limiter": "^0.7.0",
    "svgo": "^4.0.0",
    "tailwindcss": "^4.1.11",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vitest": "^3.2.4",
    "wicg-inert": "^3.1.3",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
  },
  "overrides": {
    "cookie": "0.7.2"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,html,md}": [
      "prettier --write"
    ],
    "*": [
      "ggshield secret scan pre-commit"
    ]
  },
  "dependencies": {
    "@sentry/sveltekit": "^10.20.0"
  }
}
